- var prod = process.env.NODE_ENV === 'production'
doctype
html(lang=sv)
  head
    title="Torkelsnäs väderstation"
    meta(name="viewport" content="width=device-width, initial-scale=1")
    if !prod
      link(rel="stylesheet" type="text/css" href="http://localhost:8080/bundle.css")
    if prod
      link(rel="stylesheet" type="text/css" href="/assets/bundle.css")
    link(rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Alegreya+Sans:400")
  body
    div#app!= viewContent
    script.
      window.initialData = !{initialData};
    if !prod
      script(type="text/javascript" src="http://localhost:8080/bundle.js")
    if prod
      script(src="/assets/bundle.js")

